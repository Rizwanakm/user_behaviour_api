{
  "compilerOptions": {
    "target": "ES2020",            // JavaScript version output
    "module": "commonjs",          // Node.js module system
    "outDir": "dist",              // Compiled JS files output folder
    "rootDir": "src",              // Source TS files folder
    "strict": true,                // Enable strict type-checking
    "esModuleInterop": true,       // Allow import of CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true           // Skip type checking for node_modules
  },
  "include": ["src/**/*"],          // Include all TS files in src
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist
}
